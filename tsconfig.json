{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es6"],
    "alwaysStrict": true,
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "*": ["types/*", "*"]
    }
  },
  "include": ["src/**/*"]
}
